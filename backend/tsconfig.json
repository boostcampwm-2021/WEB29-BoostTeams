{
	"extends": "./tsconfig.path.json",
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"strictNullChecks": false
	},
	"exclude": ["node_modules"],
	"include": ["src", "test"]
}
